<% layout('/layouts/boilerplate') -%>

<body>
           
   <div class="filters sticky-top-md-2 ">

    <a href="/listing/filter/treanding">
    <div class="filter">
       <div> <i class="fa-solid fa-fire"></i></div>  
        <p>Treanding</p>
        </div>
    </a>


     <a href="/listing/filter/beach">
     <div class="filter">
        <div> <i class="fa-solid fa-umbrella-beach"></i></div>  
         <p>Beach</p>
    </div>
    </a>

    <a href="/listing/filter/tree house">
    <div class="filter">
        <div> <i class="fa-solid fa-tree"></i></i></div>  
        <p>Tree house</p>
     </div>
    </a>

     <a href="/listing/filter/iconic city">
     <div class="filter">
        <div> <i class="fa-solid fa-mountain-city"></i></div>  
        <p>Iconic City</p>
     </div>
    </a>

     <a href="/listing/filter/bread and breakfast">
     <div class="filter">
        <div> <i class="fa-solid fa-mug-hot"></i></div>  
        <p>Bread and Breakfast</p>
     </div>
    </a>

     <a href="/listing/filter/amazing pool">
     <div class="filter">
        <div> <i class="fa-solid fa-water-ladder"></i></div>  
        <p>Amazing pool</p>
     </div>
    </a>

     <a href="/listing/filter/palace">
     <div class="filter">
        <div> <i class="fa-solid fa-place-of-worship"></i></div>  
        <p>Palace</p>
     </div>
    </a>


     <a href="/listing/filter/amazing view">
     <div class="filter">
        <div> <i class="fa-solid fa-sun-plant-wilt"></i></div>  
        <p>Amazing View</p>
     </div>
    </a>

     <a href="/listing/filter/arctic">    
     <div class="filter">
        <div> <i class="fa-solid fa-snowman"></i></div>  
        <p>Arctic</p>
     </div>
    </a>

     <a href="/listing/filter/farm">
     <div class="filter">
        <div> <i class="fa-solid fa-cow"></i></div>  
        <p>Farm</p>
     </div>
    </a>

     <a href="/listing/filter/mountain">
     <div class="filter">
        <div> <i class="fa-solid fa-mountain-sun"></i></div>  
        <p>Mountain</p>
     </div>
    </a> 
    
    <div class="tax-toggle ms-auto">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label text" for="flexSwitchCheckDefault">Display total after taxes</label>
          </div>
    </div>

</div>
    
    <br/> 
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of listings){ %>
          
        <a href="/listing/<%= listing._id %>" class="card_link">
            <div class="card listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="list_image"  style="height:20rem">

                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"></p>
                       <b><%= listing.title %></b>  <br/>
                     <div>  &#8377 <%= listing.price.toLocaleString("en-IN")%> /night
                        <i class="taxInfo">  + 18% GST</i></div> 
                      </p>
                    </div>
                  </div>
            </a>
            <% } %>
             
           
       
    </div>

<script src="/js/taxDisplay.js"></script>
  
</body>
