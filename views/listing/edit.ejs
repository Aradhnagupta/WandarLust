<% layout('/layouts/boilerplate') -%>

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <body>
            <br/> <br/>
            <h1>Edit Listing</h1>
            <br/> 
            <form method="POST"  action="/listing/<%= list._id %>?_method=PUT" class=" needs-validation" enctype="multipart/form-data" novalidate>
                
        
            <div class=" mb-3">
                <label for="title" class="form-title">Title</label>
                <input type="text" id="title" name="listing[title]" value="<%= list.title %>" class="form-control" required>

                <div class="invalid-feedback"> Please enter title </div> 
            </div>
        
           <div  class=" mb-3" >
                <label for="description" class="form-description">Description</label>
                <textarea name="listing[description]" id="description" class="form-control"><%= list.description %></textarea>
            </div>
          
            <div class=" mb-3">
                <label for="image" class="form-image">Upload new image file</label>
                <input type="file" id="image" name="listing[image][url]"  class="form-control">

                
            </div>
           

            <div class="row mb-3 ">

                <div class="col-md-7">
                    <label for="dropdown">Catagory</label>
                    <select id="dropdown" name="catagory" class="form-control" required>
                        <option value="treanding">Treanding</option>
                        <option value="mountain">Mountain</option>
                        <option value="beach">Beach</option>
                        <option value="iconic city">Iconic city</option>
                        <option value="amazing pool">Amazing Pool</option>
                        <option value="arctic">Arctic</option>
                        <option value="amazing view">Amazing view</option>
                        <option value="farm">Farm</option>
                        <option value="tree house">Tree house</option>
                        <option value="bread and breakfast">Bread and breakfast</option>
                        <option value="palace">Palace</option>
                        
                        
                   </select>
                   <div class="valid-feedback"> Looks good! </div>
                    <div class="invalid-feedback"> Please enter location </div>
                </div>

                <div class="col-md-5">
                    <label for="price" class="form-price">Price</label>
                    <input type="number" id="price" name="listing[price]" value="<%= list.price%>" placeholder="enter price" class="form-control" required>

                    <div class="invalid-feedback"> Please enter price </div> 
                </div>
               
            </div>

            <div class="row mb-3 ">
                <div class=" col-md-7">
                    <label for="location" class="form-location">Location</label>
                    <input type="text" id="location" name="listing[location]" value="<%= list.location%>" placeholder="Enter location" class="form-control" required>

                    <div class="invalid-feedback"> Please enter location </div> 
                </div>

                <div class="col-md-5">
                    <label for="country" class="form-country">Country</label>
                    <input type="text" id="country" name="listing[country]"  value="<%= list.country%>" placeholder="enter country" class="form-control" required>

                    <div class="invalid-feedback"> Please enter country </div> 
                </div>
            </div>


              
            <br/>
            <button type="submit" class="btn btn-dark edit_btn">Edit</button>
            </form>
           
            
        </body>
        
    </div>
</div>

 

   

   
   
    
